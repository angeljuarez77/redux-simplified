import React from 'react';
import { connect } from 'react-redux';
import { addNumber } from '../actions/mathOperations.js';

function MathAddition(props) {
  let input;

  return (
    <form
      onSubmit={e => {
      e.preventDefault();
      if(!input.value.trim()) {
        return
      }
      if(typeof parseInt(input.value) === 'number') {
        const num = parseInt(input.value);
        console.log(num);
        console.log(addNumber);
        props.dispatch(addNumber(num));
      }
    }}>
      <input ref={ node => input = node }/>
      <button type="submit">
        Add Number
      </button>
    </form>
  )
}

function mapStateToProps(state) {
  console.log(state.number, "from mapStateToProps");
  return {
    number: state.number,
    timesCalled: state.timesCalled
  };
}

/*
 * mapDispatchToProps
 * You have to import the actionCreators that you'll use
 * and stick them inside of an object
*/
const mapDispatchToProps = {
  addNumber
}

export default connect(mapStateToProps)(MathAddition)
